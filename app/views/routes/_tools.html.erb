<div class='footdiv' id='tools'>
  <h3>Tools</h3>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <table>
    <tr>
      <% r = if rand <= 0.5 then ['Little','Big'] else ['Teensy','Ginormous'] end %>
      <td id='size-little'><%= r[0] %></td>
      <td>
        <%= f.hidden_field :zoom %>
        <div class='size-slider' id='zoom-slider' data-value='<%= f.object.zoom %>'></div>
      </td>
      <td id='size-big'><%= r[1] %></td>
    </tr>
    <tr>
      <% r = if rand <= 0.5 then ['Quick spin','Epic'] else ['Shopping trip','Grand tour'] end %>
      <td id-'x-quick'><%= r[0] %></td>
      <td>
        <%= f.hidden_field :x_scale %>
        <div class='size-slider' id='scale-slider' data-value='<%= f.object.x_scale %>'></div>
      </td>
      <td id='x-epic'><%= r[1] %></td>
    </tr>
    <tr>
      <% r = if rand <= 0.5 then ['Molehills','Mountains'] else ['Netherlands','Switzerland'] end %>
      <td id='y-molehills'><%= r[0] %></td>
      <td><%= f.hidden_field :y_scale %><div class='size-slider' id='y-slider' data-value='<%= f.object.y_scale %>'></div></td>
      <td id='y-mountains'><%= r[1] %></td>
    </tr>
    <tr>
      <td id='crop'>Crop Ride</td>
      <td>
        <%= f.hidden_field :crop_start_distance %><%= f.hidden_field :crop_stop_distance %>
        <div class='size-slider' id='crop-slider' data-start='<%= f.object.crop_start_distance %>' data-stop='<%= f.object.crop_stop_distance %>'></div>
      </td>
    </tr>
    
  </table>
</div>
<div class='footdiv' id='controls'>
  <h3>Controls</h3>
  <div>
    <%= f.label :renderer %>
    <%= f.select :renderer, ["Giro", "Hobart 10,000 Banner", "Le Tour"] %>
  </div>
  <div><%= button_tag "Export to PNG", :id => 'export-button', :type => 'button' %> (<span id='dimensions'>0 x 0</span>)</div>
  <div><%= button_tag "Save Route", :id => 'save-button', :type => 'button' %></div>
</div>
<div class='footdiv renderer-controls' id='h10kbanner-renderer-controls'>
  <h3>Renderer</h3>
  <%= f.hidden_field :renderer_options %>
  <div><%= select_tag 'h10k_color', "<option value='red'>Red</option><option value='green'>Green</option><option value='blue'>Blue</option>".html_safe %></div>
</div>