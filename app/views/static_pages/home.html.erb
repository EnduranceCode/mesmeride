<% if signed_in? %>
  <div class="center hero-unit">
    <h1>Mesmeride</h1>
    
    <p>Signed in.</p>
    
    <h2>Your Routes</h2>
    <div id='route-list'>
      <% if !@routes.nil? %>
        <%= render "routes/index" %>
        <!--  will_paginate @routes -->
      <% else %>
        No routes.
      <% end %>
    </div>
    
    <%= link_to "Download Activity", get_activity_path %>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Mesmeride</h1>

    <h2>
      This is the home page for Mesmeride.
    </h2>

    <%= link_to "Sign in", signin_path, class: "btn btn-large btn-primary" %>
  </div>
<% end %>
